{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*"],
      "@lib/*": ["src/lib/*"],
      "@api/*": ["src/api/*"]
    }
  },
  "include": ["src/**/*", "src/lib/**/*"]
}
